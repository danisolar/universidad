#include <stdio.h>
#include <stdlib.h>

main()
{
      int n,i;
      float x,sum=1;
      do
      {
                   printf("\nIngrese N\n");
                   scanf("%d",&n);
      }while(n<1);
      printf("\nIngrese el valor de X\n");
      scanf("%f",&x);
      sum=sum+x;
      for(i=3;i<=n;i++)
      {
                   sum=sum+x/(i-1);
      }
      printf("\nEl resultado de la sumarotia es %f\n",sum);
      
system("PAUSE");
return 0;
}
